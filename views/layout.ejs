<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<link rel='stylesheet' href='/stylesheets/style.css' />
	</head>
	<body>
		<ul class="banner">
			<li><a href="/">首页</a></li>
			<% if(!user){  %>
				<li><a href="/login">登陆</a></li>
				<li><a href="/reg">注册</a></li>
			<% }else{ %>
				<li><a href="/u/<%= user.username %>">我的说说</a></li>
				<li><a href="/logout">退出</a></li>
			<% } %>

		</ul>
	
		<% if(success) {%>
			<div class="alert alert-success"> 
				<%= success  %>
			</div>
		<% } %>

		<% if(error) {%>
			<div class="alert alert-error"> 
				<%= error  %>
			</div>
		<% } %>

		<%- body %>
	</body>
</html>
